:root

  .gl.footer.section
    background #393f45
    font-size 14px
    padding-bottom 1em
    padding-top 2em

    .ui.huge.container
      margin-left auto
      margin-right auto
      max-width 1300px
      width 1127px

      @media only screen and (max-width: 1199px) and (min-width: 992px)
        width 933px

      @media only screen and (max-width: 991px) and (min-width: 768px)
        width 723px

      @media only screen and (max-width: 767px)
        width auto
        margin-left 1em
        margin-right @margin-left

    .ui.inverted.header
      color #fff
      font-weight 700
      line-height 1.5
      margin-bottom 1rem

    .ui.link.list
      line-height 1.3
      font-size 1em

      > .item
        display block
        padding-bottom 3px
        padding-top @padding-bottom

    .footer-payment-logo
      width 90px !important

    .footer-social-icons
      display flex
      margin-top 30px !important

      > .footer-social-icon
        display flex
        height 36px
        position relative
        width @height

        > i.icon
          height 100%
          left 0
          position absolute
          top 0
          width 100%

        &.social-icon-twitter

          > i.icon:hover circle
            fill #0084b4

        &.social-icon-facebook

          > i.icon:hover circle
            fill #3b5998

        &.social-icon-linkedin

          > i.icon:hover circle
            fill #1f88be

        &.social-icon-youtube

          > i.icon:hover circle
            fill #cd201f

        &.social-icon-instagram

          > i.icon:hover circle
            fill #dd2a7b

        + .footer-social-icon
          margin-left 15px

    .footer-column-wrapper
      justify-content center
      display flex

      @media (max-width 1090px)
        align-items center
        flex-direction column

        .footer-column-social
          margin-top 2em
          text-align center

          .footer-social-icons
            justify-content center

    .footer-links
      display flex
      justify-content center

      @media (max-width 820px)
        flex-wrap wrap

        .footer-column
          width 50% !important

    .footer-column
      padding 1em

      .header
        font-size 16px !important

      .list
        .item
          color hsla(#fff, .4) !important
          line-height 1.3
          transition none !important

          &:hover
            color hsla(#fff, .85) !important

      &-process
        width 250px !important

      &-terms
        width 250px !important

      &-browse
        width 150px !important

      &-about
        width 150px !important

      &-social
        width 250px !important

    .footer-payment-title
      color hsla(#fff, .3)
      margin-bottom 1em
      margin-top 3em
      text-align center

    .footer-payment-providers
      display flex

      > .column
        align-items center
        display flex
        flex-grow 1
        justify-content center
        width 100%

        > div
          line-height 20px

        .icon
          display block
          position relative
          height 56px
          width 66px

          > svg
            height 100%
            left 0
            position absolute
            top 0
            width 100%

      @media (max-width 760px)
        flex-wrap wrap !important

        > .column
          width calc(100% / 3) !important

    .nav-search
      align-items center
      display flex

      .nav-search-wrapper
        align-items center
        display flex
        height 40px
        position relative
        width 280px

        .nav-search-inner
          align-items center
          background #fff
          display flex
          height 100%
          width 80%
          z-index 1

          .search.icon
            align-items center
            color $color-grey-lighter
            display flex
            flex-shrink 0
            font-size 16px
            height 100%
            justify-content center
            margin 0
            width 50px

          .nav-search-input
            border none
            height 100%
            min-width 0
            outline none
            width auto

        .nav-search-dropdown
          border none
          border-radius 0
          height 100%
          left 0
          position absolute
          top 0
          width 100%
          z-index 0 !important

          > .dropdown.icon
            align-items center
            display flex
            justify-content center
            width 50px

            &::before
              content url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' width='12' height='8' viewBox='0 0 12 8'%3e%3cpath fill='%23BDBDBD' fill-rule='evenodd' d='M0 1.567L6 8l6-6.433L10.539 0 6 5.03 1.443 0z'/%3e%3c/svg%3e");

          &.selection.visible.dropdown > .text:not(.default)
            display none

          .menu
            background #fff !important

            .item
              height 40px !important

          &.selection.active.dropdown

            .menu
              margin 0 !important
              min-width 100% !important
              width 100% !important

      @media (max-width 1075px)
        display none

    .nav-logo
      margin-left 10px

    .footer-app-links
      margin-top 30px

      > .button + .button
        margin-top 10px

    .gl.button.store
      padding .85em 2em

      > .icon
        font-size 2em

      > div > div
        font-size 14px

  .footer-copyright
    background #33393f
    color hsla(#fff, .4)
    font-size 14px
    line-height 20px
    margin 0
    padding-bottom 16.8px
    padding-top @padding-bottom
    text-align center
    width 100%
